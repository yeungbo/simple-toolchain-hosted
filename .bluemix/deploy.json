{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": {
	       "$ref":"#/messages/deploy.region"
	    },
            "type": "string"
        },
        "prod-organization": {
            "description": {
	       "$ref":"#/messages/deploy.org"
	    },
            "type": "string"
        },
        "prod-space": {
            "description": {
	       "$ref":"#/messages/deploy.space"
	    },
            "type": "string"
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string"
        },
         "registry-namespace": {
            "description": {
              "$ref": "#/messages/deploy.registryDescription"
            },
            "type": "string",
            "enum": [],
            "pattern": "^[a-z0-9][a-z0-9_-]{3,29}$"
        },	    
        "prod-cluster-name": {
            "description": {
              "$ref": "#/messages/deploy.clusterDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name",
        "api-key",
        "registry-namespace",
        "prod-cluster-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": {
                   "$ref": "#/messages/deploy.apiKeyTitle"
                },
	        "key": "api-key"
        },
        {
          "type": "select",
          "key": "prod-region",
	        "readonly": true,
           "title": {
            "$ref": "#/messages/region"
          }
        },{
          "key": "prod-cluster-name",
	        "readonly": false,
          "type": "select",
          "title": {
              "$ref": "#/messages/deploy.clusterName"
          }
        },{
          "type": "select",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.imageRegistryNamespace"
          },
          "key": "registry-namespace"
          }
            ]
        }
    ]
}
